{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "system",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowArbitraryExtensions": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".old"
  ],
  "include": [
    "ennj"
  ]
}
